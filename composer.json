{
  "name": "affiliated-writer/backend",
  "description": "Slim 4 + SQLite (Render) backend for Affiliated Writer",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.1",
    "vlucas/phpdotenv": "^5.6",
    "selective/basepath": "^2.3",

    "monolog/monolog": "^3.7",
    "firebase/php-jwt": "6.0",
    "illuminate/database": "^12.0",

    "psr/http-message": "1.1",
    "tuupola/cors-middleware": "^1.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "start": "php -S 0.0.0.0:10000 -t public",
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}

